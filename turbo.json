{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PAYU_SALT", "PAYU_BASE_URL", "PAYU_MERCHANT_KEY", "PAYU_SURL", "PAYU_FURL", "NEXT_PUBLIC_MAP_STYLE_URL"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
